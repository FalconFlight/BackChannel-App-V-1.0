<% @all_users.each do |each_user| %>

    <%= each_user.name %> |
    <%= each_user.email %> |
    <%= each_user.account_type.capitalize %> |
    <%= all_posts = Post.find_all_by_user_id_and_parent(each_user.id, -1).count %>
