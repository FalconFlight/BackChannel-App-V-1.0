<% if @parent_id==-1 %>
  <h1>Submit a new Post</h1>
  <% type = "Post" %>
<% else %>
  <h1>Write a Reply to <%= @parent_id %></h1>
  <% type = "Reply" %>
<% end %>

<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit "Submit #{type}" %>
  </div>
<% end %>

