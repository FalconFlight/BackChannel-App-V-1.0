<h1>Welcome to the Backhannel App!</h1>

<%= link_to "Sign up now!", signup_path(:user_type => "regular"), :class => "signup_button round" %>
<br />
<%= link_to "Browse as Guest", signup_path(:user_type => "guest"), :class => "guest_browse round" %>


<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

